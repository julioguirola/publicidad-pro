<header>
  <div id="logo">
    <img src="sitename.svg">
  </div>
  <div id="menu"></div>
</header>

<script>
  function addNodes (root, nodes) {
    for (let node of nodes) {
      root.append(node)
    }
  }

  const $ = (elm) => document.querySelector(elm)
  const $$ = (elm) => document.createElement(elm)

  const menu = $$("img")
  menu.src = "menu-2.svg"

  const anchors = [$$("a"), $$("a"), $$("a"), $$("a"), $$("a")]
  const names = ["Inicio", "Servicios", "Planes", "Actividad", "Contacto"]
  const points = ["#", "#promo", "#infoplanes","#counters", "#contact"]

  const links = anchors.map((actual,i) => {
    let name = names[i]
    let point = points[i]

    actual.innerText = name
    actual.style.textDecoration = "none"
    actual.style.fontSize = "20px"
    actual.style.color = "#09f"
    actual.href = point

    return actual
  })

  const menuresp = $("#menu")
  const modalcontent = $("#modalcontent")
  const modal = $("#modal")

  if (window.innerWidth <= 500) {
    addNodes(menuresp, [menu])
    addNodes(modalcontent, links)
  } else {
    addNodes(menuresp, links)
  }

  window.onresize = () => {
    menuresp.innerHTML = ""
    if (window.innerWidth <= 500) {
      addNodes(menuresp, [menu])
      addNodes(modalcontent, links)
    } else {
      addNodes(menuresp, links)
    }
  }

  menu.onclick = function() {
    menu.src = "close.svg"
    modal.style.display = "block";
  }

  document.onclick = function(event) {
    if (event.target == modal) {
      menu.src = "menu-2.svg"
      modal.style.display = "none";
    }
  }

</script>

<style>
  header {
    display: flex;
    justify-content: space-between;
    position: sticky;
    position: -webkit-sticky;
    top: 0;
    background-color: rgba(250, 250, 250, 0.95);
    border-radius: 25px;
    padding-left: 20px;
    padding-right: 20px;
  }

  header img {
    margin-top: 5px;
  }

  #menu {
    display: flex;
    align-items: center;
    gap: 10px;
  }

</style>